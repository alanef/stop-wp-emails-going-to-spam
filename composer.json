{
  "name": "alanef/stop-wp-emails-goin-to-spam",
  "description": "Wordpress plugin to stop wp emails going to spam",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "config": {
    "platform": {
      "php": "7.4.33"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "post-update-cmd": ["composer update -d stop-wp-emails-going-to-spam",
      "wp i18n make-pot ./stop-wp-emails-going-to-spam  ./stop-wp-emails-going-to-spam/languages/stop-wp-emails-going-to-spam.pot --skip-audit --exclude='./vendor'"
    ],
    "build": [
      "cd stop-wp-emails-going-to-spam && composer install --no-dev",
      "mkdir -p zipped",
      "wp dist-archive stop-wp-emails-going-to-spam zipped/stop-wp-emails-going-to-spam-free.zip --force"
    ],
    "phpcs": "phpcs stop-wp-emails-going-to-spam -s --standard=phpcs_sec.xml --ignore=*/vendor/*  --extensions=php",
    "compat:8.4": "./vendor/bin/phpcs stop-wp-emails-going-to-spam -s --standard=PHPCompatibilityWP --ignore=*/vendor/*  --extensions=php --runtime-set testVersion 8.4",
    "compat:8.3": "./vendor/bin/phpcs stop-wp-emails-going-to-spam -s --standard=PHPCompatibilityWP --ignore=*/vendor/*  --extensions=php --runtime-set testVersion 8.3",
    "compat:8.2": "./vendor/bin/phpcs stop-wp-emails-going-to-spam -s --standard=PHPCompatibilityWP --ignore=*/vendor/*  --extensions=php --runtime-set testVersion 8.2",
    "compat:8.1": "./vendor/bin/phpcs stop-wp-emails-going-to-spam -s --standard=PHPCompatibilityWP --ignore=*/vendor/*  --extensions=php --runtime-set testVersion 8.1",
    "compat:8.0": "./vendor/bin/phpcs stop-wp-emails-going-to-spam -s --standard=PHPCompatibilityWP --ignore=*/vendor/*  --extensions=php --runtime-set testVersion 8.0",
    "compat:7.4": "./vendor/bin/phpcs stop-wp-emails-going-to-spam -s --standard=PHPCompatibilityWP --ignore=*/vendor/*  --extensions=php --runtime-set testVersion 7.4",
    "check": [
      "@compat:8.4",
      "@compat:8.3",
      "@compat:8.2",
      "@compat:8.1",
      "@compat:8.0",
      "@compat:7.4",
      "@phpcs"
    ]
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "*",
    "phpstan/phpstan": "*"
  }
}
